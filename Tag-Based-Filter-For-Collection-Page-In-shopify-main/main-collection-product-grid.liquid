<style>
  img{
    max-width: 100%;
    vertical-align: top;
  }
  .collection-filter-heading {
    font-size: 22px;
    margin: 0 0 30px;
    color: #000;
  }
  ul.collection-tag-filter {
    margin: 0;
    list-style: none;
    padding: 0 0 0 20px !important;
    padding-inline-start: 0px !important;
  }
  ul.collection-tag-filter li {
    list-style: none;
    font-size: 20px;
    font-weight: 500;
    line-height: 1.5;
    padding: 0;
    margin: 0 0 30px 0;
    cursor: pointer;
    color: #000;
    text-transform: capitalize;
    word-break: break-word;
  }
  ul.collection-tag-filter li.active-filter {
    text-decoration: underline;
  }
  #product-grid .grid__item{
    max-width: 100%!important;
    width: 100%!important;
  }
  .grid-with-filter-col-1 > ul > ul{
    padding-left: 20px;
  }
  ul.collection-tag-filter > li.custom-tag-filter{
    position: relative;
  }
  ul.collection-tag-filter > li.custom-tag-filter a{
    color: #000;
  }
  ul.collection-tag-filter > li.active-filter{
    text-decoration: none;
  }
  li.custom-tag-filter.collection-submenu a {
    color: #000;
  }
   ul.collection-tag-filter > li.collection-submenu-arrow:after{
    content: '';
    border: solid #121212bf;
    border-width: 0 1px 1px 0;
    display: inline-block;
    padding: 4px;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    position: absolute;
    right: 0;
    top: calc(50% - 6px);
    transition: 0.5s;
  }
  ul.collection-tag-filter > li.custom-tag-filter.show:after{
    transform: rotate(226deg);
    -webkit-transform: rotate(226deg);
  }
  .grid-with-filter-col-1 {
    float: left;
    width: 20%;
    padding-right: 30px;
  }
  a.grid-product__link {
    text-decoration: none;
  }
  .grid-product__title{
    color: #000;
    line-height: 1.5;
    font-weight: 700;
    letter-spacing: -0.4px;
    text-decoration: none;
    text-align: center;
  }
  .grid-product__price{
    text-align: center;
  }
  .grid-product__price span,
  .grid-product__price--original{
    font-size: 13px;
    color: #000;
    font-weight: 700;
    letter-spacing: 1.15px;
  }
  button.filter-btn-collection{
    display: none;
  }
  .card__badge.top {
    align-self: flex-start;
    grid-row-start: 1;
    justify-self: flex-start;
  }
  .grid-product__tag--sale{
    border: 1px solid transparent;
    display: inline-block;
    font-size: 1.2rem;
    letter-spacing: .1rem;
    line-height: 1;
    padding: 0.6rem 1.3rem;
    word-break: break-word;
    text-align: center;
    border-radius: 46px;
    background-color: #334fb4;
    border-color: #334fb4;
    color: #fff;
    position: absolute;
    left: 11px;
    top:11px;
  }
  #product-grid .grid__item{
    position: relative;
    padding: 0 10px;
  }
  .close-filter{
    display: none;
    font-weight: 700;
    font-size: 22px;
    line-height: 1.4;
    color: #000;
  }
  ul#product-grid .grid-product__content .grid-product-image {
    padding: 0 15px;
  }
  .grid-with-filter-col-1 > ul > ul.active {
    display: block;
  }
  .collection ul#product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px 10px;
  }
  .collection ul#product-grid li.grid__item {
    width: 100%;
    max-width: 100%;
    padding: 0;
  }
  .collection ul#product-grid li.grid__item .card-information__text{
    font-size: 20px;
    color: {{ section.settings.product_title_color }};
  }
  .collection ul#product-grid li.grid__item .price div span{
    color: {{ section.settings.product_price_color }};
  }
  @media screen and (max-width: 1024px){
    .collection ul#product-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    ul.collection-tag-filter li {
      font-size: 18px;
    }
  }
  @media screen and (min-width: 769px){
    .grid-product__title{
      font-size: 19.52px;
    }
    .grid-product__colors {
      line-height: 20px;
    }
  }
  @media screen and (max-width: 767px){
    button.filter-btn-collection {
      margin: 0 auto 32px;
      width: 100%;
      border: 2px solid;
      padding: 7px;
      font-size: 16px;
      max-width: 172px;
      background-color: #000;
      color: #fff;
      letter-spacing: 1px;
    }
    button.filter-btn-collection, .close-filter {
      display: block!important;
    }
    .grid-with-filter-col-1{
      float: left;
      position: fixed;
      z-index: 999;
      left: 0px;
      top: 0px;
      bottom: 0px;
      background: white;
      width: 86%!important;
      display: none;
    }
    .collection-filter-heading {
      font-size: 22px;
      border-bottom: 3px solid;
      padding: 13px;
      margin-bottom: 30px;
    }
    ul.collection-tag-filter li {
      padding: 0 0 5px 40px!important;
      font-size: 16px;
    }
    .close-filter{
      display: block !important;
    }
    ul#product-grid .grid-product__content .grid-product-image{
      padding: 0;
    }
    .collection-hero__title{
      margin: 3rem 0 0;
    }
    .collection{
      padding-top: 30px;
    }
    .collection ul#product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .collection ul#product-grid li.grid__item .card-information__text{
      font-size: 18px;
    }
  }
</style>

{{ 'template-collection.css' | asset_url | stylesheet_tag }}
